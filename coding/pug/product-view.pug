block content
  section.section
    .breadcrumbs
      h2 Dried Mango
      ul.breadcrumbs__list
        li.breadcrumbs__item.text-xs Home
        li.breadcrumbs__item.text-xs Explore Treats
        li.breadcrumbs__item.text-xs Treats From Asia
    .product-view
      .main-wrapper
        .product-view__wrapper
          .product-view__card
            .product-view__display.product-view__display--full
              img(src="../images/products/driedMango2.png", alt="Dried Mango from philippines")
            ul.product-view__list
              li.product-view__display
                img(src="../images/products/driedMango2.png", alt="Dried Mango from philippines")
              li.product-view__display
                img(src="../images/products/driedMango2.png", alt="Dried Mango from philippines")
              li.product-view__display
